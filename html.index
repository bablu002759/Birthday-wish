<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>For You âœ¨</title>

<!-- Cute Stylish Font -->
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500;700&display=swap" rel="stylesheet">

<style>
body {
  margin: 0;
  height: 100vh;
  background: radial-gradient(circle at top, #1a2a6c, #000);
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: 'Quicksand', sans-serif;
  color: white;
  text-align: center;
  overflow: hidden;
}

#fireworks {
  position: absolute;
  inset: 0;
  background: url("https://media.giphy.com/media/3o6Zt6ML6BklcajjsA/giphy.gif") center/cover no-repeat;
}

#content {
  display: none;
  padding: 20px;
  max-width: 90%;
  animation: fadeIn 2s forwards;
}

#text {
  font-size: 20px;
  line-height: 1.7;
  white-space: pre-line;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
</style>
</head>

<body>

<!-- Fireworks -->
<div id="fireworks"></div>

<!-- Message -->
<div id="content">
  <div id="text"></div>
</div>

<!-- Typing Sound -->
<audio id="typeSound" src="https://assets.mixkit.co/sfx/preview/mixkit-typewriter-soft-click-1123.mp3"></audio>

<script>
const message = 
`Old year is going to sleep,
New year is knocking with a beep â³

You are the first and the last person
I wanted to wish this year ðŸ’«

Happy New Year to my favourite person ðŸŽ‰â¤ï¸

May your 2026 be full of happiness.
Stay blessed ðŸ’`;

const textEl = document.getElementById("text");
const sound = document.getElementById("typeSound");

let i = 0;

// After fireworks
setTimeout(() => {
  document.getElementById("fireworks").style.display = "none";
  document.getElementById("content").style.display = "block";
  typeText();
}, 3000);

function typeText() {
  if (i < message.length) {
    textEl.textContent += message.charAt(i);
    sound.currentTime = 0;
    sound.play();
    i++;
    setTimeout(typeText, 50);
  }
}
</script>

</body>
</html>
